<h1>Update <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename album</label>
  <input value="<%= @album.name%>" id="name" name="name" type="text" class="form-control">
  <label for="genre">Edit genre</label>
  <input value="<%= @album.genre%>" id="genre" name="genre" type="text" class="form-control">
  <label for="year">Edit year</label>
  <input value="<%= @album.year%>" id="year" name="year" type="text" class="form-control">
  <button type="submit">Update</button>
</form>

<p><a href="/albums">Return to album list</a></p>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete album</button>
</form>